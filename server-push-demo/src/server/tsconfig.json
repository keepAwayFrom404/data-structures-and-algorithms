{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../../dist/server",
    "rootDir": "./",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}